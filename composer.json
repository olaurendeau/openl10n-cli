{
    "name": "openl10n/cli",
    "description": "Command-line tool to interact with Openl10n",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.4",
        "openl10n/sdk": "~0.1",
        "symfony/config": "~2.4",
        "symfony/console": "~2.4",
        "symfony/event-dispatcher": "~2.4",
        "symfony/dependency-injection": "~2.4",
        "symfony/finder": "~2.4",
        "symfony/yaml": "~2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8"
    },
    "autoload": {
        "psr-0": {
            "Openl10n\\Cli": "src"
        }
    },
    "scripts": {
        "test": [
            "phpunit"
        ]
    },
    "config": {
        "bin-dir": "bin/"
    },
    "bin": [
        "bin/openl10n"
    ]
}
