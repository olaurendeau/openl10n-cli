{
    "name": "openl10n/cli",
    "description": "Command-line tool to interact with Openl10n",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^5.4",
        "openl10n/sdk": "^0.1",
        "symfony/config": "^2.7",
        "symfony/console": "^2.7",
        "symfony/dependency-injection": "^2.7",
        "symfony/event-dispatcher": "^2.7",
        "symfony/finder": "^2.7",
        "symfony/yaml": "^2.7",
        "padraic/phar-updater": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Openl10n\\Cli\\": "src/Openl10n/Cli"
        }
    },
    "scripts": {
        "test": [
            "phpunit --colors=always"
        ]
    },
    "bin": [
        "bin/openl10n"
    ]
}
